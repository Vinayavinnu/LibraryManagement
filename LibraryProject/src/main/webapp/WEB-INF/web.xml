<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>LibraryProject</display-name>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.LibraryProject.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UserRegister</servlet-name>
		<servlet-class>com.LibraryProject.UserRegisterServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UserRegister</servlet-name>
		<url-pattern>/UserRegister</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AddBook</servlet-name>
		<servlet-class>com.LibraryProject.AddBookServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AddBook</servlet-name>
		<url-pattern>/AddBook</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>EditBook</servlet-name>
		<servlet-class>com.LibraryProject.EditBookServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>EditBook</servlet-name>
		<url-pattern>/EditBook</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>DeleteBook</servlet-name>
		<servlet-class>com.LibraryProject.DeleteBookServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeleteBook</servlet-name>
		<url-pattern>/DeleteBook</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>BookList</servlet-name>
		<servlet-class>com.LibraryProject.BookListServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BookList</servlet-name>
		<url-pattern>/BookList</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>IssueBook</servlet-name>
		<servlet-class>com.LibraryProject.IssueBookServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>IssueBook</servlet-name>
		<url-pattern>/IssueBook</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ReturnBook</servlet-name>
		<servlet-class>com.LibraryProject.ReturnBookServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ReturnBook</servlet-name>
		<url-pattern>/ReturnBook</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.LibraryProject.LogoutServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>Login.jsp</welcome-file>
	</welcome-file-list>

</web-app>